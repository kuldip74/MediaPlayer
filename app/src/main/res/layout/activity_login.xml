<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/loginback"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/form_logo"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_music_note_pink_400_48dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/form_logo"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/trans_rectangle_white"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:text="Get Started"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:text="Just few details to get started"
                android:textColor="#000000"
                android:textSize="12sp" />

            <AutoCompleteTextView
                android:id="@+id/editText_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/rounded_rectangle"
                android:drawableLeft="@drawable/ic_account_circle_blue_grey_700_24dp"
                android:drawablePadding="5dp"
                android:hint="Name"
                android:paddingLeft="10dp"
                android:textColorHint="#000000"
                android:textSize="14sp" />

            <AutoCompleteTextView
                android:id="@+id/editText_username"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/rounded_rectangle"
                android:drawableLeft="@drawable/ic_account_circle_blue_grey_700_24dp"
                android:drawablePadding="5dp"
                android:hint="Username"
                android:paddingLeft="10dp"
                android:textColorHint="#000000"
                android:textSize="14sp" />

            <AutoCompleteTextView
                android:id="@+id/editText_password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/rounded_rectangle"
                android:drawableLeft="@drawable/ic_lock_blue_grey_700_24dp"
                android:drawablePadding="5dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:textColorHint="#000000"
                android:textSize="14sp" />

            <Button
                android:id="@+id/register_buttton"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp"
                android:background="@drawable/register_button"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Register"
                android:textColor="#ffffff"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/imageButton_close"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_gravity="start"
                    android:layout_marginRight="180dp"
                    android:text="X Exit" />


                <TextView
                    android:id="@+id/skipButton"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="Skip>>" />
            </LinearLayout>



        </LinearLayout>

    </ScrollView>

</RelativeLayout>